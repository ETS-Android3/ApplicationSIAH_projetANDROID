<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4151515"
    tools:context=".Menu_sport">

    <Button
        android:id="@+id/handball_button"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:background="#00FFFFFF"
        android:text="           Handball"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#CAC6C6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.779" />

    <Button
        android:id="@+id/basketball_menu"
        android:layout_width="344dp"
        android:layout_height="100dp"
        android:background="#00F8F6F6"
        android:text="            Basketball"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#CAC6C6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.624" />

    <Button
        android:id="@+id/rugby_menu"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:text="           Rugby"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#CAC6C6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.464" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:text="Choix du poste "
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#ECECEC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/football_menu"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:background="#00F8F6F6"
        android:text="           Football"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#CAC6C6"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.306" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="416dp"
        android:layout_height="172dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053"
        app:srcCompat="@drawable/s_p_ration_barresiah" />

    <ImageView
        android:id="@+id/imageView42"
        android:layout_width="90dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/image_basket_blanc"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="396dp" />

    <ImageView
        android:id="@+id/imageView43"
        android:layout_width="90dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/image_foot_blanc"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="195dp" />

    <ImageView
        android:id="@+id/imageView44"
        android:layout_width="90dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/image_rugby_blanc"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="295dp" />

    <ImageView
        android:id="@+id/imageView45"
        android:layout_width="90dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/image_handball_blanc"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="498dp" />

</android.support.constraint.ConstraintLayout>