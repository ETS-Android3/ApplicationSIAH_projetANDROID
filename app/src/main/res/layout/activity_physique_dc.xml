    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4151515"
    tools:context=".Physique_dc">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="444dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:text="Exercices physiques"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#ECECEC"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <ImageView
        android:id="@+id/barrerouge"
        android:layout_width="410dp"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069"
        app:srcCompat="@drawable/s_p_ration_barresiah" />

    <Button
        android:id="@+id/btn_exo_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vivacite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.964" />

    <Button
        android:id="@+id/btn_exo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:text="agilite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.964" />

    <Button
        android:id="@+id/btn_exo_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="force"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.901"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.964" />

    <ImageView
        android:id="@+id/imageagilite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.265"
        app:srcCompat="@drawable/agilite1" />

    <TextView
        android:id="@+id/textagilite"
        android:layout_width="353dp"
        android:layout_height="248dp"
        android:text="L’agilité peut se définir comme la capacité à mouvoir et changer de direction rapidement. Elle exige de l’athlète des réflexes, de la coordination, de l’équilibre, de la vitesse et une réponse à une évolution subite de la situation de jeu. Être agile, c’est être efficace dans une situation qui demande une action rapide, comme d’aller tacler un adversaire. Quelques exercices pour améliorer son agilité:\n- Le saut de haies\n- Le saut pliométrique latérale\n- Exercices avec échelles d’agilité"
        android:textAlignment="center"
        android:textColor="#ECECEC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.824" />

    <ImageView
        android:id="@+id/imageforce"
        android:layout_width="387dp"
        android:layout_height="258dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.262"
        app:srcCompat="@drawable/force"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/textforce"
        android:layout_width="348dp"
        android:layout_height="279dp"
        android:text="La force joue un rôle fondamental dans le football, tout part de la structure du joueur, de sa capacité à générer de la force. La qualité physique fondamentale c’est la force, tout en découle, la vitesse et l’endurance sont toutes deux dépendantes et dérivées de la force. Ainsi, toute action musculaire que nous faisons découle de la force, c’est pourquoi son optimisation est fondamentale et qu’elle doit être travaillée dans le football. Pour travailler cela, nous vous conseillons un travail de renforcement musculaire avec ou sans matériel."
        android:textAlignment="center"
        android:textColor="#ECECEC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.922"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/imagevivacite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112"
        app:srcCompat="@drawable/vivacite"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/textvivacite"
        android:layout_width="370dp"
        android:layout_height="306dp"
        android:text="La vivacité est la vitesse en enchainant des mouvements variés et différents. Concrètement, la vitesse est une course en ligne droite, la vivacité est une course en slalom par exemple. La vivacité nécessite d’être complet car elle travaille la force de démarrage, la force de freinage, le déplacement du corps vers l’objectif… C’est très important de faire le distinguo entre la vitesse pure et la vivacité, il n’est pas rare que des joueurs aient une excellente vitesse mais une vivacité moins bonne. Le travail de vivacité au football peut se faire soit de manière isolée avec des changements de direction (latéraux, avant/arrière…) notamment sur du travail poly directionnel mais également avec ballon sous forme de mini-jeux à 2 contre 2 voire 3 contre 3 sur des surfaces adaptées."
        android:textAlignment="center"
        android:textColor="#ECECEC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85"
        tools:visibility="gone" />
</android.support.constraint.ConstraintLayout>